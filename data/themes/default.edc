          rel1.relative: 0.0 0.0;
          rel1.offset: -1 0;
          rel2.relative: 0.0 1.0;
          rel2.offset: -1 -1;
          //min: ICON_SIZE ICON_SIZE;
          align: 1.0 1.0;
          offscale;
        }
        description { state: "disable" 0.0;
          inherit: "default" 0.0;
          visible: 0;
        }
