          offscale;
        }
        description { state: "disable" 0.0;
          inherit: "default" 0.0;
          visible: 0;
        }
      }
      program { signal: "mouse,clicked,1"; source: "entice.next";
        action: SIGNAL_EMIT "image,action,next" "entice";
      }

      STOP_FADE("next")

      // Menu icon
      part
      {
        name: "entice.menu";
        type: SWALLOW;
        clip_to: fader;
        scale: 1;
        description
        {
          state: "default" 0.0;
          fixed: 1 1;
          rel.to: "entice.fullscreen";
          rel1.relative: 0.0 0.0;
          rel1.offset: -1 0;
          rel2.relative: 0.0 1.0;
          rel2.offset: -1 -1;
          min: ICON_SIZE ICON_SIZE;
          align: 1.0 0.0;
          offscale;
        }
        description { state: "disable" 0.0;
          inherit: "default" 0.0;
          visible: 0;
        }
      }
      program { signal: "mouse,clicked,1"; source: "entice.menu";
        action: SIGNAL_EMIT "image,action,menu" "entice";
      }

      STOP_FADE("menu")

      // Fullscreen icon
      part
      {
        name: "entice.fullscreen";
        type: SWALLOW;
        clip_to: fader;
        scale: 1;
        description
        {
          state: "default" 0.0;
          fixed: 1 1;
          rel.to: "entice.close";
          rel1.relative: 0.0 0.0;
          rel1.offset: -1 0;
          rel2.relative: 0.0 1.0;
          rel2.offset: -1 -1;
          min: ICON_SIZE ICON_SIZE;
          align: 1.0 0.0;
          offscale;
        }
        description { state: "disable" 0.0;
          inherit: "default" 0.0;
          visible: 0;
        }
      }
      program { signal: "mouse,clicked,1"; source: "entice.fullscreen";
        action: SIGNAL_EMIT "image,action,fullscreen" "entice";
      }

      STOP_FADE("fullscreen")


      // Close icon
      part
      {
        name: "entice.close";
        type: SWALLOW;
        clip_to: fader;
        scale: 1;
        description
        {
          state: "default" 0.0;
          fixed: 1 1;
          rel1.relative: 1.0 0.0;
          rel1.offset: -GB_PAD GB_PAD;
          rel2.relative: 1.0 0.0;
          rel2.offset: -GB_PAD GB_PAD;
          min: ICON_SIZE ICON_SIZE;
          align: 1.0 0.0;
          offscale;
        }
        description { state: "disable" 0.0;
          inherit: "default" 0.0;
          visible: 0;
        }
      }
      program { signal: "mouse,clicked,1"; source: "entice.close";
        action: SIGNAL_EMIT "image,action,close" "entice";
      }

      STOP_FADE("close")


      // Error text
      part
      {
        name: "entice.nofile";
        type: TEXT;
        mouse_events: 0;
        scale: 1;
        description
        {
          state: "default" 0.0;
          fixed: 1 1;
          rel1.relative: 0.5 0.0;
          rel1.offset: 5 0;
          rel2.relative: 0.5 1.0;
          rel2.offset: 5 -1;
          color: 255 255 255 255;
          align: 1.0 0.5;
          text
          {
            font: "Sans"; size: 12;
            align: 1.0 0.5;
            min: 1 1;
            text: "No image found";
            elipsis: -1;
          }
          visible: 0;
        }
        description
        {
          state: "shown" 0.0;
          inherit: "default" 0.0;
          visible: 1;
        }
      }
      program { signal: "state,error,show"; source: "entice";
        action: STATE_SET "shown" 0.0;
        target: "entice.nofile";
      }

      // Error icon
      part
      {
        name: "entice.error";
        type: SWALLOW;
        mouse_events: 0;
        scale: 1;
        description
        {
          state: "default" 0.0;
          fixed: 1 1;
          rel.to: "entice.nofile";
          rel1.relative: 0.0 0.5;
          rel1.offset: (-ICON_SIZE - 5) 0;
          rel2.relative: 0.0 0.5;
          rel2.offset: (-ICON_SIZE - 5) 0;
          min: ICON_SIZE ICON_SIZE;
          visible: 0;
          align: 0.0 0.5;
          offscale;
        }
        description
        {
          state: "shown" 0.0;
